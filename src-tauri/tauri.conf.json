{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pl-analyzer"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/AdamFunMaker/pl-analyzer/update/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEN0JEQkVCRDYzMkQyMjgKUldRbzBqTFc2OXQ3TFVkOFJ5T1pMUzdCcFQ5VnY4RWpzTzFZSGJQNWIrNjIwdGVpTEFVckNRWUcK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "label": "main",
        "fileDropEnabled": false,
        "maximized": true,
        "title": "P&L Analyzer",
        "visible": false
      },
      {
        "label": "splashscreen",
        "center": true,
        "width": 300,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "url": "splashscreen.html",
        "title": "P&L Analyzer"
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "pl-analyzer",
      "publisher": "Lim Tze Yang",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Business",
      "targets": ["nsis", "updater"],
      "windows": {        
        "webviewInstallMode": {
          "type": "offlineInstaller"
        },
        "wix": {
          "language": "en-US"
        },
        "nsis": {
          "installerIcon": "icons/icon.ico"
        }
      }
    }
  }
}